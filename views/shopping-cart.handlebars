{{#if products}}
<div class="products">
	<form action="/cart/checkout" method="POST">
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<ul class="list-group">
				{{#each products}}
				<li class="list-group-item">
					<span class="badge" name="qty">{{this.qty}}</span>
					<strong name="name">{{this.item.name}}</strong>
					<span class="label label-success">${{this.price}}</span>
					<div class="btn-group">
						<button class="btn btn-primary btn-xs dropdown-toggle" type="button"> Action <span class="caret"></span></button>
						<ul class="dropdown-menu">
							<li><a href="#">Remove </a></li>
							<li><a href="#">Remove All</a></li>
						</ul>
					</div>
				</li>
			{{/each}}
			</ul>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<strong name="price">Total: ${{totalPrice}}.00</strong>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<button type="submit" class="cambtn"> Checkout </button>
		</div>
	</div>
</form>
{{else}}
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<h1><strong>No Items In Cart</strong><h1>
		</div>
	</div>
</div>
{{/if}}