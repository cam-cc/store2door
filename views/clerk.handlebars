<div class="register">
  <div class="panel panel-info">
      <div class="panel-heading">
          <div class="panel-title">Create Meal </div>
          <div style="float:right; font-size: 85%; position: relative"><a id="signinlink" href="/products">View products</a></div>
      </div>  
      <div class="panel-body" >
  <div class="errorContainer">
    <ul class="error"></ul>
  </div>
<form id="create-meal-form" class="form-horizontal" action="/meals/add">
<div class="form-group">
    <label for="name" class="col-md-3 control-label">Name</label>
    <div class="col-md-9">
        <input type="text" class="form-control" name="name" placeholder="Meal package name">
    </div>
</div>
<div class="form-group">
    <label for="price" class="col-md-3 control-label">Price</label>
    <div class="col-md-9">
        <input type="text" class="form-control" name="price" placeholder="price Address">
    </div>
</div>    
<div class="form-group">
    <label for="desc" class="col-md-3 control-label">description</label>
    <div class="col-md-9">
        <input type="text" class="form-control" name="desc" placeholder="Password">
    </div>
</div>
<div class="form-group">
    <label for="category" class="col-md-3 control-label">Category</label>
    <div class="col-md-9">
        <input type="text" class="form-control" name="category" placeholder="Category">
    </div>
</div>
<div class="form-group">
    <label for="qty" class="col-md-3 control-label">Quantity</label>
    <div class="col-md-9">
        <input type="text" class="form-control" name="qty" placeholder="qty">
    </div>
</div>
<div class="form-group">
    <label for="special" class="col-md-3 control-label">Special Package</label>
    <div class="col-md-9">
        <input type="radio" class="form-control" name="special">
    </div>
</div>
<div class="form-group">
    <label for="image" class="col-md-3 control-label">Image URL</label>
    <div class="col-md-9">
        <input type="text" class="form-control" name="image">
    </div>
</div>
<div class="form-group">
    <!-- Button -->                                        
    <div class="col-md-offset-3 col-md-9">
        <button type="submit" class="cambtn"> Submit </button>
    </div>
</div>
</form>
</div>
  </div>
</div>
</div>
